<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <PreferenceCategory
        android:title="@string/ConnectionPreferenceCategoryTitle"
        tools:ignore="RequiredSize" >

        <EditTextPreference
            android:name="@string/ConnectionUrlPreferenceTitle"
            android:defaultValue="http://localhost/"
            android:inputType="textUri"
            android:key="ConnectionUrlPreference"
            android:summary="@string/ConnectionUrlPreferenceSummary"
            android:title="@string/ConnectionUrlPreferenceTitle"
            tools:ignore="RequiredSize" />

        <EditTextPreference
            android:name="@string/ConnectionUsernamePreferenceTitle"
            android:defaultValue=""
            android:inputType="textFilter"
            android:key="ConnectionUsernamePreference"
            android:summary="@string/ConnectionUsernamePreferenceSummary"
            android:title="@string/ConnectionUsernamePreferenceTitle" />

        <EditTextPreference
            android:name="@string/ConnectionPasswordPreferenceTitle"
            android:defaultValue=""
            android:inputType="textPassword"
            android:key="ConnectionPasswordPreference"
            android:summary="@string/ConnectionPasswordPreferenceSummary"
            android:title="@string/ConnectionPasswordPreferenceTitle" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="ConnectionLazyServerPreference"
            android:summary="@string/ConnectionLazyServerPreferenceSummary"
            android:title="@string/ConnectionLazyServerPreferenceTitle" />

        <PreferenceScreen android:title="@string/ConnectionHttpPreferenceCategoryTitle" >

            <PreferenceCategory android:title="@string/ConnectionHttpPreferenceCategoryTitle" >

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="ConnectionHttpPreference"
                    android:summary="@string/ConnectionHttpPreferenceSummary"
                    android:title="@string/ConnectionHttpPreferenceTitle" />

                <EditTextPreference
                    android:name="@string/ConnectionHttpUsernamePreferenceTitle"
                    android:defaultValue=""
                    android:inputType="textFilter"
                    android:key="ConnectionHttpUsernamePreference"
                    android:summary="@string/ConnectionUsernamePreferenceSummary"
                    android:title="@string/ConnectionHttpUsernamePreferenceTitle" />

                <EditTextPreference
                    android:name="@string/ConnectionHttpPasswordPreferenceTitle"
                    android:defaultValue=""
                    android:inputType="textPassword"
                    android:key="ConnectionHttpPasswordPreference"
                    android:summary="@string/ConnectionHttpPasswordPreferenceSummary"
                    android:title="@string/ConnectionHttpPasswordPreferenceTitle" />
            </PreferenceCategory>
        </PreferenceScreen>

        <PreferenceScreen android:title="@string/ConnectionSslPreferenceCategoryTitle" >

            <PreferenceCategory android:title="@string/ConnectionSslPreferenceCategoryTitle" >

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:disableDependentsState="true"
                    android:key="ConnectionSSLPreference"
                    android:summary="@string/ConnectionSslPreferenceSummary"
                    android:title="@string/ConnectionSslPreferenceTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:disableDependentsState="true"
                    android:key="ConnectionTrustHostsPreference"
                    android:summary="@string/ConnectionTrustHostsPreferenceSummary"
                    android:title="@string/ConnectionTrustHostsPreferenceTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:disableDependentsState="true"
                    android:key="ConnectionUseOldConnector"
                    android:summary="@string/ConnectionUseOldConnectorSummary"
                    android:title="@string/ConnectionUseOldConnectorTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:dependency="ConnectionSSLPreference"
                    android:disableDependentsState="false"
                    android:key="ConnectionUseKeystorePreference"
                    android:summary="@string/ConnectionUseKeystorePreferenceSummary"
                    android:title="@string/ConnectionUseKeystorePreferenceTitle" />

                <EditTextPreference
                    android:name="@string/ConnectionKeystorePasswordPreferenceTitle"
                    android:defaultValue=""
                    android:dependency="ConnectionUseKeystorePreference"
                    android:inputType="textPassword"
                    android:key="ConnectionKeystorePasswordPreference"
                    android:summary="@string/ConnectionKeystorePasswordPreferenceSummary"
                    android:title="@string/ConnectionKeystorePasswordPreferenceTitle" />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/MiscellaneousPreferenceCategoryTitle"
        tools:ignore="RequiredSize" >

        <PreferenceScreen android:title="@string/UsagePreferenceCategoryTitle" >

            <PreferenceCategory android:title="@string/UsagePreferenceCategoryTitle" >

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="UsageAutomaticMarkReadPreference"
                    android:summary="@string/UsageAutomaticMarkReadPreferenceSummary"
                    android:title="@string/UsageAutomaticMarkReadPreferenceTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="UsageOpenUrlEmptyArticlePreference"
                    android:summary="@string/UsageOpenUrlEmptyArticleSummary"
                    android:title="@string/UsageOpenUrlEmptyArticleTitle" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="UsageUseVolumeKeysPreference"
                    android:summary="@string/UsageUseVolumeKeysSummary"
                    android:title="@string/UsageUseVolumeKeysTitle" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:disableDependentsState="true"
                    android:key="DisplayUseSwipePreference"
                    android:summary="@string/DisplayUseSwipeSummary"
                    android:title="@string/DisplayUseSwipeTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:dependency="DisplayUseSwipePreference"
                    android:key="DisplayUseButtonsPreference"
                    android:summary="@string/DisplayUseButtonsSummary"
                    android:title="@string/DisplayUseButtonsTitle" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="UsageVibrateOnLastArticlePreference"
                    android:summary="@string/UsageVibrateOnLastArticleSummary"
                    android:title="@string/UsageVibrateOnLastArticleTitle" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="DisplayShowVirtualPreference"
                    android:summary="@string/DisplayVirtualPreferenceSummary"
                    android:title="@string/DisplayVirtualPreferenceTitle" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="DisplayLoadImagesPreference"
                    android:summary="@string/DisplayLoadImagesPreferenceSummary"
                    android:title="@string/DisplayLoadImagesPreferenceTitle" />
            </PreferenceCategory>
        </PreferenceScreen>

        <PreferenceScreen android:title="@string/DisplayPreferenceCategoryTitle" >

            <PreferenceCategory android:title="@string/DisplayPreferenceCategoryTitle" >

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="DisplayAlignFlushLeftPreference"
                    android:summary="@string/DisplayAlignFlushLeftSummary"
                    android:title="@string/DisplayAlignFlushLeftTitle" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="DisplayArticleLinkPreference"
                    android:summary="@string/DisplayArticleLinkSummary"
                    android:title="@string/DisplayArticleLinkTitle" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="DisplayDateTimeFormatSystemPreference"
                    android:summary="@string/DisplayDateTimeFormatSystemSummary"
                    android:title="@string/DisplayDateTimeFormatSystemTitle" />

                <EditTextPreference
                    android:name="@string/DisplayDateFormatTitle"
                    android:defaultValue="@string/DisplayDateFormatDefault"
                    android:inputType="textFilter"
                    android:key="DisplayDateFormatPreference"
                    android:summary="@string/DisplayDateFormatSummary"
                    android:title="@string/DisplayDateFormatTitle" />

                <EditTextPreference
                    android:name="@string/DisplayTimeFormatTitle"
                    android:defaultValue="@string/DisplayTimeFormatDefault"
                    android:inputType="textFilter"
                    android:key="DisplayTimeFormatPreference"
                    android:summary="@string/DisplayTimeFormatSummary"
                    android:title="@string/DisplayTimeFormatTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="DisplayDarkBackgroundPreference"
                    android:summary="@string/DisplayDarkBackgroundSummary"
                    android:title="@string/DisplayDarkBackgroundTitle" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="DisplayArticleHeaderPreference"
                    android:summary="@string/DisplayArticleHeaderSummary"
                    android:title="@string/DisplayArticleHeaderTitle" />

                <org.ttrssreader.preferences.EditIntegerPreference
                    android:name="@string/HeadlineSizeTitle"
                    android:defaultValue="10"
                    android:inputType="number"
                    android:key="HeadlineSizePreference"
                    android:maxLength="2"
                    android:summary="@string/HeadlineSizeSummary"
                    android:title="@string/HeadlineSizeTitle" />

                <org.ttrssreader.preferences.EditIntegerPreference
                    android:name="@string/TextZoomTitle"
                    android:defaultValue="100"
                    android:inputType="number"
                    android:key="TextZoomPreference"
                    android:maxLength="3"
                    android:summary="@string/TextZoomSummary"
                    android:title="@string/TextZoomTitle" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="MarkReadInMenuPreference"
                    android:summary="@string/MarkReadInMenuSummary"
                    android:title="@string/MarkReadInMenuTitle" />
            </PreferenceCategory>
        </PreferenceScreen>

        <PreferenceScreen android:title="@string/SystemPreferenceCategoryTitle" >

            <PreferenceCategory android:title="@string/SystemPreferenceCategoryTitle" >

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:disableDependentsState="false"
                    android:key="CacheImagesOnStartupPreference"
                    android:summary="@string/CacheImagesOnStartupSummary"
                    android:title="@string/CacheImagesOnStartupTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:dependency="CacheImagesOnStartupPreference"
                    android:key="CacheImagesOnlyWifiPreference"
                    android:summary="@string/CacheImagesOnlyWifiSummary"
                    android:title="@string/CacheImagesOnlyWifiTitle" />

                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="CacheImagesUnreadArticlesPreference"
                    android:summary="@string/CacheImagesUnreadArticlesSummary"
                    android:title="@string/CacheImagesUnreadArticlesTitle" />

                <Preference
                    android:key="SaveAttachmentPreference"
                    android:persistent="false"
                    android:summary="- PATH - set by activity -"
                    android:title="@string/SaveAttachmentTitle" />

                <Preference
                    android:key="CacheFolderPreference"
                    android:persistent="false"
                    android:summary="- PATH - set by activity -"
                    android:title="@string/CacheFolderTitle" />

                <org.ttrssreader.preferences.EditIntegerPreference
                    android:name="@string/DisplayArticleLimitTitle"
                    android:defaultValue="2000"
                    android:inputType="number"
                    android:key="DisplayArticleLimitPreference"
                    android:maxLength="5"
                    android:summary="@string/DisplayArticleLimitSummary"
                    android:title="@string/DisplayArticleLimitTitle" />

                <org.ttrssreader.preferences.EditIntegerPreference
                    android:name="@string/StoreImageLimitTitle"
                    android:defaultValue="50"
                    android:inputType="number"
                    android:key="StoreImageLimitPreference"
                    android:maxLength="5"
                    android:summary="@string/StoreImageLimitSummary"
                    android:title="@string/StoreImageLimitTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="LogSensitiveDataPreference"
                    android:summary="@string/LogSensitiveDataSummary"
                    android:title="@string/LogSensitiveDataTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="VacuumDBScheduledPreference"
                    android:summary="@string/VacuumDBOnNextStartupSummary"
                    android:title="@string/VacuumDBOnNextStartupTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="DeleteDBOnStartupPreference"
                    android:summary="@string/DeleteDBOnStartupSummary"
                    android:title="@string/DeleteDBOnStartupTitle" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="DeleteDBScheduledPreference"
                    android:summary="@string/DeleteDBOnNextStartupSummary"
                    android:title="@string/DeleteDBOnNextStartupTitle" />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/About.about"
        tools:ignore="RequiredSize" >

        <!-- Doesn't work, perhaps because AboutActivity is set to android:theme="@android:style/Theme.Dialog" ? -->
        <!--
             <PreferenceScreen
            android:title="@string/About.about"
            android:summary="@string/About.about_hint">
            <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="org.ttrssreader.gui"
            android:targetClass="org.ttrssreader.gui.AboutActivity" />
            </PreferenceScreen>
        -->

        <PreferenceScreen
            android:summary="@string/About.project_hint"
            android:title="@string/About.project" >

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://code.google.com/p/ttrss-reader-fork/" />
        </PreferenceScreen>

        <PreferenceScreen
            android:summary="@string/About.feedback_hint"
            android:title="@string/About.feedback" >

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://code.google.com/p/ttrss-reader-fork/issues/list" />
        </PreferenceScreen>

        <PreferenceScreen
            android:summary="@string/About.twitter_hint"
            android:title="@string/About.twitter" >

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/About.twitter_acc" />
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>