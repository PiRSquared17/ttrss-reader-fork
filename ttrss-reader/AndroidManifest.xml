<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.ttrssreader"
	android:versionCode="3"
	android:versionName="0.3.0">
	
	<application android:icon="@drawable/icon"
		android:label="@string/ApplicationName"
		android:description="@string/ApplicationDescription">

		<activity android:name=".gui.activities.CategoryActivity"
			android:label="@string/ApplicationName">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".gui.activities.FeedListActivity" />
		<activity android:name=".gui.activities.FeedHeadlineListActivity" />
		<activity android:name=".gui.activities.ArticleActivity" />
		<activity android:name=".gui.activities.PreferencesActivity" />
		<activity android:name=".gui.activities.ConnectionErrorActivity" />
		<activity android:name=".gui.activities.AboutActivity"
			android:theme="@android:style/Theme.Dialog"
			android:label="@string/AboutActivity.Title" />
	</application>

	<uses-sdk android:minSdkVersion="3" />
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.VIBRATE" />

</manifest> 